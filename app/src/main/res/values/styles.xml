<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FC4A5A</item>
        <item name="colorPrimaryDark">#FC4A5A</item>
        <item name="colorAccent">#FC4A5A</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextTitleStyleInSet">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#989898</item>
    </style>

    <style name="TextBodyStyleInSet">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#9000</item>
    </style>


</resources>
